default: &default
  adapter: postgresql
  encoding: unicode
  host: 127.0.0.1
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
development:
  <<: *default
  database: scribble_by_gaagul_gigi_development
test:
  <<: *default
  user: postgres
  database: scribble_by_gaagul_gigi_test<%= ENV['CIRCLE_NODE_INDEX'] %>
production:
  <<: *default
  database: scribble_by_gaagul_gigi_production
  username: scribble_by_gaagul_gigi
  password: <%= ENV['SCRIBBLE_BY_GAAGUL_GIGI_DATABASE_PASSWORD'] %>
